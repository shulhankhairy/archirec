<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPutih">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="match_parent">



        <RelativeLayout
            android:id="@+id/card"
            android:layout_below="@+id/background_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:id="@+id/lin"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <com.hexa.mobile.archirecon.tools.fonts.EditText_fontRegularRoboto
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/nama"
                        android:background="@drawable/input_design"
                        android:layout_toRightOf="@id/user_icon"
                        android:layout_marginTop="20dp"
                        android:hint="Nama"
                        android:textSize="15dp"
                        android:inputType="text"
                        android:paddingBottom="15dp"
                        android:paddingLeft="48dp"
                        android:paddingRight="8dp"
                        android:paddingTop="12dp">
                        <requestFocus/>
                    </com.hexa.mobile.archirecon.tools.fonts.EditText_fontRegularRoboto>

                    <com.hexa.mobile.archirecon.tools.fonts.font_awesome
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_icon"
                        android:text="@string/fa_user"
                        android:textColor="@color/colorOrange"
                        android:layout_gravity="bottom"
                        android:padding="15dp"
                        android:textSize="20dp"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <com.hexa.mobile.archirecon.tools.fonts.EditText_fontRegularRoboto
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/no_hp"
                        android:background="@drawable/input_design"
                        android:layout_toRightOf="@id/user_icon"
                        android:layout_marginTop="20dp"
                        android:hint="No Handphone"
                        android:textSize="15dp"
                        android:inputType="number"
                        android:paddingBottom="15dp"
                        android:paddingLeft="48dp"
                        android:paddingRight="8dp"
                        android:paddingTop="12dp">
                        <requestFocus/>
                    </com.hexa.mobile.archirecon.tools.fonts.EditText_fontRegularRoboto>

                    <com.hexa.mobile.archirecon.tools.fonts.font_awesome
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hp_icon"
                        android:text="@string/fa_phone"
                        android:textColor="@color/colorOrange"
                        android:layout_gravity="bottom"
                        android:padding="15dp"
                        android:textSize="20dp"
                        />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <com.hexa.mobile.archirecon.tools.fonts.EditText_fontRegularRoboto
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/email"
                        android:background="@drawable/input_design"
                        android:layout_toRightOf="@id/email_icon"
                        android:layout_marginTop="20dp"
                        android:hint="Email"
                        android:textSize="15dp"
                        android:inputType="text"
                        android:paddingBottom="15dp"
                        android:paddingLeft="48dp"
                        android:paddingRight="8dp"
                        android:paddingTop="12dp">
                        <requestFocus/>
                    </com.hexa.mobile.archirecon.tools.fonts.EditText_fontRegularRoboto>

                    <com.hexa.mobile.archirecon.tools.fonts.font_awesome
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/email_icon"
                        android:text="@string/fa_email"
                        android:textColor="@color/colorOrange"
                        android:layout_gravity="bottom"
                        android:padding="15dp"
                        android:textSize="20dp"
                        />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <com.hexa.mobile.archirecon.tools.fonts.EditText_fontRegularRoboto
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/password"
                        android:background="@drawable/input_design"
                        android:layout_toRightOf="@id/pass_icon"
                        android:layout_marginTop="20dp"
                        android:hint="Password"
                        android:textSize="15dp"
                        android:inputType="textPassword"
                        android:paddingBottom="15dp"
                        android:paddingLeft="48dp"
                        android:paddingRight="8dp"
                        android:paddingTop="12dp">
                        <requestFocus/>
                    </com.hexa.mobile.archirecon.tools.fonts.EditText_fontRegularRoboto>
                    <com.hexa.mobile.archirecon.tools.fonts.font_awesome
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pass_icon"
                        android:text="@string/fa_password"
                        android:textColor="@color/colorOrange"
                        android:layout_gravity="bottom"
                        android:padding="15dp"
                        android:textSize="20dp"
                        />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_design"
                    android:layout_marginRight="15dp">
                    <com.hexa.mobile.archirecon.tools.fonts.EditText_fontRegularRoboto
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="48dp"
                        android:paddingRight="8dp"
                        android:paddingTop="12dp"
                        android:id="@+id/alamat"
                        android:background="@android:color/white"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@id/alamat_icon"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:hint="Tulis Alamat Di SIni"
                        />
                    <com.hexa.mobile.archirecon.tools.fonts.font_awesome
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/alamat_icon"
                        android:text="@string/fa_password"
                        android:textColor="@color/colorOrange"
                        android:layout_gravity="top"
                        android:padding="15dp"
                        android:textSize="20dp"
                        />
                </FrameLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/btn_daftar"
                    android:text="Submit"
                    android:textColor="@color/colorPutih"
                    android:background="@color/colorOrange">
                </Button>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/btn_remove"
                    android:text="Hapus User"
                    android:textColor="@color/colorPutih"
                    android:background="@color/colorMerah">
                </Button>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/btn_blok"
                    android:visibility="gone"
                    android:text="Blokir User"
                    android:textColor="@color/colorPutih"
                    android:background="@color/colorMerah">
                </Button>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>
        </RelativeLayout>




    </RelativeLayout>
</ScrollView>
